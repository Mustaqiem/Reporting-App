<section class="sidebar">
    <div class="user-panel">
        <div class="pull-left image">
            <img src="{{ base_url() }}/assets/images/{{ login.image }}" class="img-circle" alt="User Image">
        </div>

        <div class="pull-left info">
            <p>{{login.name}}</p>
            <a href="#"><i class="fa fa-circle text-success"></i> Online
            </a>
        </div>
    </div>

    <ul class="sidebar-menu">
        <li class="header">NAVIGATION MENU</li>
        <li class="treeview">
            <a href="{{path_for('home')}}"><i class="fa ion-ios-speedometer fa-lg"></i>
            <span>HOME</span></a>
        </li class="treeview">

        {% if login.is_admin == 1 %}
        <li class="treeview">
            <a href="#"><i class="fa fa-users"></i>
                <span>GROUP</span>
                <span class="pull-right-container">
                  <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{path_for('group.list')}}">Group List</a></li>
                <li><a href="{{path_for('create.group.get')}}">Add Group</a></li>
                <li><a href="{{path_for('group.inactive')}}">Group Inactive</a></li>
            </ul>
        </li>
        <li class="treeview">
            <a href="#"><i class="fa fa-user-circle-o"></i>
                <span>USER</span>
                <span class="pull-right-container">
                  <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{path_for('user.list.all')}}">User List</a></li>
                <li><a href="{{path_for('user.create')}}">Create User</a></li>
                <li><a href="{{path_for('user.trash')}}">User Inactive</a></li>
            </ul>
        </li>
        <li class="treeview">
            <a href="#"><i class="fa fa-list-alt"></i>
                <span>ARTICLE</span>
                <span class="pull-right-container">
                  <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{ path_for('article-add') }}">Article add</a></li>
                <li><a href="{{ path_for('article-list-active') }}">Article List Active</a></li>
                <li><a href="{{ path_for('article-list-inactive') }}">Article List In-Active</a></li>
            </ul>
        </li>
        <li class="treeview">
            <a href="#"><i class="fa fa-sitemap"></i>
                <span>ITEM</span>
                <span class="pull-right-container">
                  <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li><a href="{{ path_for('index')}}">Item List</a></li>
                <li><a href="{{ path_for('item.add')}}">Create Item</a></li>
                <li><a href="{{ path_for('item.trash')}}">Trash</a></li>
            </ul>
            {% endif %}

        {% if login.is_admin == 0 %}

        <li class="treeview">
            <a href="#"><i class="fa fa-users"></i>
                <span>GROUP</span>
                <span class="pull-right-container">
                  <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                {% for user_group in user_group %}
                <li><a href="{{ base_url() }}user/group/{{ user_group.id }}">{{user_group.name}}</a></li>
                {% endfor %}
            </ul>
        </li>

        {% endif %}

        <li>
         <a href="{{ path_for('logout')}}"><i class="fa fa-power-off"></i>
            <span>LOGOUT</span></a>
        </li>

    </ul>
    </li>
</ul>


</section>
