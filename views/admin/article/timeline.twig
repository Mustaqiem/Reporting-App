<div class="container">
    <div class="col-md-8 col-md-offset-1">
        <div class="card">
            {% for article in data %}
            <center><img class="card-img-top" src="{{ base_url() }}/assets/images/{{ article.image }}"
             width="75%" height="300"  alt="Lights" alt="Card image cap"></center>
            <div class="card-block">
                <h4 class="media-heading">{{ article.title }}</h4>
                <p class="fa fa-calendar"> {{ article.created_at|date('d/m/Y') }} </p>
                <p class="fa fa-clock-o"> {{ article.created_at|date("H:m") }} </p>
                <p class="text-justify">{{ article.content|slice(0, 300) }}

                    {% if login.status == 1 %}
                    <a href="{{ path_for('article-read', { id:article.id }) }}">Readmore...</a></p>
                    {% elseif login.status == 0 %}
                    <a href="{{ path_for('user.article-read', { id:article.id }) }}">Readmore...</a></p>
                    {% endif %}

                    <br>
                {% endfor %}
            </div>
        </div>
        <hr>
        <nav aria-label="...">
			<ul class="pager">
				{% if current > 1 %}
			    <li class="previous"><a href="{{ base_url() }}/home?page={{ current - 1 }}">
                    <span aria-hidden="true">&larr;</span> Back</a></li>
			    {% endif %}
            	{% if current < total_page %}
			    <li class="next"><a href="{{ base_url() }}/home?page={{ total_page }}">
                    Last page <span aria-hidden="true">&rarr;</span></a></li>
			    <li class="next"><a href="{{ base_url() }}/home?page={{ current + 1 }}">
                    Next <span aria-hidden="true">&rarr;</span></a></li>
			    {% endif %}
			  </ul>
		</nav>
    </div>
